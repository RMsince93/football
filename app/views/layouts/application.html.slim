doctype html
html
  head
    title Football
    meta name="viewport" content="width=device-width, initial-scale=1"
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags

  body
    = render 'layouts/header' 

    - if flash[:success]
      .alert.alert-success
        p = flash[:success]

    .container.mt-4
      = yield

    = render 'layouts/footer'
